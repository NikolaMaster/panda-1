@model PandaWebApp.ViewModels.Feedback

@{
    ViewBag.Title = "Отзывы";
    Layout = "~/Views/Shared/Layout.cshtml";
}


<div class="full-info">
    <div class="feedbacks">
        <div class="header">Отзывы (@Model.Count):</div>
        <ul>
            @foreach (var entry in Model.Entries)
            {
                <li>
                    <div class="table-2 feedback">
                        <div class="column">
                            <img src="@ImageCreator.Create(entry.AuthorPhoto, 128, 128)" />
                        </div>
                        <div class="column">
                            <div class="table-2">
                                <div class="column user-name">@entry.AuthorName</div>
                                <div class="column stars"><p class="right-aligned">@entry.SendDate.ToPandaString()</p></div>
                                <div class="clear"></div>
                            </div>
                            <p class="feedback-body">
                                @entry.Text
                            </p>
                        </div>
                        <div class="clear"></div>
                    </div>
                </li>
                @*<h3>@entry.UserName</h3>
                <h2>@entry.SendDate.ToPandaString()</h2>
                <img src="@ImageCreator.Create(entry.UserPhoto, 128, 128)" />
                <h3>@entry.Title</h3>
                <p class="feedback-body">@entry.Text</p>
                <div>Rating: @entry.Rating.ToPandaString()</div>
            *@
            }
        </ul>
    </div>
</div>


