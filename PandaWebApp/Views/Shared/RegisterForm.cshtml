
﻿<script>
    function onPromouterValidation(data) {
        try {
            var json = JSON.parse(data.responseText);
            if (json != null) {
                $('#registerForm').dialog('close');
            }
            window.location.replace(json.path);
        }
        catch (e) {
            console.log(e);
        }
    }
    
    function onLoginValidation(data) {
        try {
            
            var json = JSON.parse(data.responseText);
            if (json != null) {
            $('#registerForm').dialog('close');
            }
            window.location.replace(json.path);
        }
        catch (e) {
            console.log(e);
        }
    }
    
</script>
 


<div id="registerForm">
    <ul>
        <li><a href="#login">Авторизация</a></li>
        <li><a href="#register">Регистрация</a></li>
    </ul>
    <div class="loginTab" id="login">
        @{ Html.RenderAction("Login", "Authorization"); }
    </div>
    <div class="registerTab" id="register">
    <div id="register">
        <h3>Я ищу работу.</h3>
        @{Html.RenderAction("Create", "Promouter"); }
    </div>
</div>
