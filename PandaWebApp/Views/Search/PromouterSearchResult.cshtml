@model IEnumerable<PandaWebApp.ViewModels.PromouterSearchView>

<div id ="promouterSearchResult">
    <br />
    <h2>Результаты поиска:</h2>
    @foreach (var item in Model)
    { 
        <div>

            <div>Фамилия: @item.LastName </div>
            <div>Имя: @item. FirstName</div>
            <div>Отчество: @item.MiddleName</div>
            <div>Город: @item.City</div>
            <div>Оплата: @item.Salary рублей в час</div>
            @{

                <div>@Html.ActionLink("Посмотреть профиль", "Detail", item.Checklist.User.ControllerNameByUser(), new { id = item.Checklist.User.Id}, null)</div> 
            }
            
        </div>
        <hr />
    }
</div>
