@model IEnumerable<PandaWebApp.ViewModels.EmployerSearchView>


    
    <div id ="companySearchResult">
    <br />
    <h2>Результаты поиска:</h2>
    @foreach (var item in Model)
    { 
        <div>
            <div>Компания: @item.EmployerName </div>
            <div>Город: @item.City</div>
            <div>Работа: @item.Work</div>
            <div>Пол: @item.Gender</div>
            <div>Оплата: @item.Salary рублей в час</div>
            @{

                <div>@Html.ActionLink("Посмотреть профиль", "Detail", "Employer", new { id = item.Checklist.User.Id}, null)</div> 
            }

        </div>
        <hr />
    } 
    </div>
