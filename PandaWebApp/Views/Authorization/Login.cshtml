@model PandaWebApp.FormModels.Login


<div id="login">
    @using (Ajax.BeginForm("Login", "Authorization", new AjaxOptions
        {
            UpdateTargetId = "login",
            HttpMethod = "POST",
            OnComplete = "onLoginValidation"
        }))
    {
        @Html.HiddenFor(model => model.ReturnUrl)

        <div class="error_text">
            <div>@Html.ValidationMessageFor(x => x.Email)</div>
            <div>@Html.ValidationMessageFor(x => x.Password)</div>
        </div>

        <div>
            <label class ="form_label">E-mail</label>
        </div>
        <div>
            @Html.TextBoxFor(x => x.Email, new Dictionary<string, object>() {{"class", "email_field"}})
        </div>
        
        <div>
            <label class ="form_label">Пароль</label>
        </div>
        <div>
            @Html.PasswordFor(x => x.Password, new Dictionary<string, object>() {{"class", "password_field"}})
        </div>
        <div class="clear"></div><br>
        <button type="submit" class="green_button">Войти</button>
        
        <a href="#" class="password_forget">Вспомнить пароль</a>

    }
</div>

